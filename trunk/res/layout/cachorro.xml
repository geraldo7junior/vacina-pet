<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcd7f3">
    
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
    <ImageButton
        android:id="@+id/foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        android:src="@drawable/foto"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome: Luck"
        android:ems="10"
        android:textSize="32dp"
        android:layout_marginBottom="35dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/textViewRaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RaÃ§a: Viralata"
        android:ems="10"
        android:textSize="32dp"
        android:layout_marginBottom="35dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <TextView
        android:id="@+id/textViewSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo: Macho"
        android:ems="10"
        android:textSize="32dp"
        android:layout_marginBottom="35dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView
        android:id="@+id/textViewNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de nascimento: 23/10/2014"
        android:ems="10"
        android:textSize="32dp"
        android:layout_marginBottom="35dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView
        android:id="@+id/textViewPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso: 3 Kg"
        android:ems="10"
        android:textSize="32dp"
        android:layout_marginBottom="35dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonVacinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Vacinas"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Editar"
        android:textColor="@android:color/white" />
    
     <Button
        android:id="@+id/buttonExcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Excluir"
        android:textColor="@android:color/white" />

</LinearLayout>

</ScrollView>